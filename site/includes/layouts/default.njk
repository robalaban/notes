<!doctype html>
<html id="_html" x-data="theme()" lang="en" class="min-h-full antialiased">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            {{ site.name }}
            {% if title %}
                -
                {{ title }}
            {% endif %}
        </title>
        <meta name="description" content="{% if meta_description %}{{ meta_description }}{% else %}{{ excerpt }}{% endif %}">
        {% if page.fileSlug === 'blog' %}
            <meta name="robots" content="noindex,follow"/>
        {% else %}
            <meta name="robots" content="index,follow"/>
        {% endif %}

        {# lastly include favicon, fonts, etc #}
        <link rel="icon" type="image/png" href="{{ site.images.favicon }}">

        {# canonical #}
        <link rel="canonical" href="{{ site.url }}{{ page.url }}">

        <link rel="stylesheet" href="/assets/main.bundle.css">
        <script src="/assets/main.bundle.js"></script>
    </head>

    {% include "partials/header.njk" %}

    <body class="dark:text-gray-300 text-gray-700" {% if body_class %} id="{{ body_class }}" {% endif %}>

        <a class="sr-only" href="#main">Skip to content</a>

        <main class="">

            {# include content #}
            {{ content | safe }}

        </main>

        {% include "partials/footer.njk" %}

    </body>
</html>
