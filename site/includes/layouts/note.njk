---
layout: default
---

{# Note Layout #}
<section>

    <div class="article__meta">
        <header class="article__title">
            <h2>{{ title }}</h2>
        </header>
        <time class="article__date" datetime="{{ date }}">
            {{ date | dateDisplay }}
        </time>
    </div>

    <article class="prose prose-sm sm:prose lg:prose-lg xl:prose-2xl mx-auto prose-pink">
        {{ content | safe }}
    </article>

    <div>
        <div>
            {% if prevPost %}
                <p>
                    <a href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
                </p>
            {% endif %}
            {% if nextPost %}
                <p>
                    <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
                </p>
            {% endif %}
        </div>
    </div>
</section>