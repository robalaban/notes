---
layout: default
---

{# Note Layout #}
<main id="main" tabindex="-1">

    <article id="container-centre">

        <div>

            <header>
                <h1>{{ title }}</h1>
            </header>

            <div>

                <time datetime="{{ date }}">
                    {{ date }}
                </time>

                {% if tags %}

                    {% set comma = joiner() %}

                    <p>Posted in

                        {% for item in tags %}

                            {%- if item != "blog" -%}

                                <a href="/category/{{ item }}">{{ comma() }}
                                    {{ item | capitalize }}</a>

                            {%- endif -%}

                        {% endfor %}

                    </p>

                {% endif %}

            </div>

        </div>

        <div>

            {{ content | safe }}

        </div>

        <div>

            <div>
                {% if prevPost %}
                    <p>
                        <a href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
                    </p>
                {% endif %}
                {% if nextPost %}
                    <p>
                        <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
                    </p>
                {% endif %}
            </div>
        </div>

    </article>

</main>