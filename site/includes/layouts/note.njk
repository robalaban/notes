---
layout: default
---

{# Note Layout #}

<section class="mx-auto lg:py-10 md:py-8 py-6 max-w-7xl flex flex-col justify-start prose lg:prose-lg xl:prose-2xl px-4 xl:px-0 dark:text-gray-600">
    <h1 class="dark:text-gray-200">{{ title }}</h1>
    <time class="article__date" datetime="{{ date }}">
        {{ date | dateDisplay }}
    </time>
</section>

<article class="prose prose-pink sm:prose sm:prose-pink lg:prose-lg lg:prose-pink xl:prose-2xl xl:prose-pink mx-auto px-4 md:px-0 dark:text-gray-400">

    <section>
        {{ content | safe }}
    </section>

    <footer class="grid grid-cols-2 gap-4">
        {% if prevPost %}
            <figure class="bg-gray-100 rounded-xl p-8 col-start-1">
                <p class="text-gray-500">Previous article</p>
                <a href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
            </figure>
        {% endif %}
        {% if nextPost %}
            <figure class="bg-gray-100 rounded-xl p-8 col-start-2">
                <p class="text-gray-500">Next article</p>
                <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
            </figure>
        {% endif %}
    </footer>
</article>